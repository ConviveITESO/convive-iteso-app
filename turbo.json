{
	"$schema": "https://turborepo.com/schema.json",
	"globalDependencies": ["**/.env.*local"],
	"tasks": {
		"dev": {
			"cache": false,
			"persistent": true
		},
		"build": {
			"dependsOn": ["^build"],
			"outputs": ["dist/**", ".next/**", "!.next/cache/**"]
		},
		"//#format-and-lint": {},
		"//#format-and-lint:fix": {
			"cache": false
		},

		"test": {},
		"test:e2e": {}
	},
	"ui": "tui"
}
