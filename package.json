{
	"name": "convive-iteso-app",
	"version": "1.0.0",
	"description": "",
	"main": "index.js",
	"scripts": {
		"postinstall": "turbo build --filter=@repo/schemas",
		"format-and-lint": "biome check .",
		"format-and-lint:fix": "biome check . --write",
		"commitlint": "commitlint",
		"dev": "turbo dev",
		"dev:app": "turbo dev --filter",
		"build": "turbo build",
		"build:app": "turbo build --filter",
		"lint": "turbo lint",
		"lint:app": "turbo lint --filter",
		"lint:fix": "turbo lint:fix",
		"lint:app:fix": "turbo lint:fix --filter",
		"format": "turbo format",
		"format:app": "turbo format --filter",
		"format:check": "turbo format:check",
		"format:app:check": "turbo format:check --filter",
		"check": "turbo check",
		"check:app": "turbo check --filter",
		"check:fix": "turbo check:fix",
		"check:app:fix": "turbo check:fix --filter",
		"db:push": "pnpm --filter ./apps/api exec drizzle-kit push",
		"db:migrate": "pnpm --filter ./apps/api exec drizzle-kit migrate",
		"db:generate": "pnpm --filter ./apps/api exec drizzle-kit generate",
		"ui:add": "pnpm --filter ./apps/web ui:add"
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"packageManager": "pnpm@10.15.1",
	"devDependencies": {
		"@biomejs/biome": "2.2.2",
		"@commitlint/config-conventional": "^19.8.1",
		"@repo/schemas": "workspace:*",
		"@repo/typescript-config": "workspace:*",
		"commitlint": "^19.8.1",
		"lefthook": "^1.12.3",
		"turbo": "^2.5.6",
		"typescript": "^5.9.2"
	},
	"engines": {
		"node": ">=22"
	}
