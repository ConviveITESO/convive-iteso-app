{
	"name": "convive-iteso-app",
	"version": "1.0.0",
	"description": "",
	"main": "index.js",
	"scripts": {
		"postinstall": "turbo build --filter=@repo/schemas && lefthook install",
		"commitlint": "commitlint",
		"dev": "turbo dev",
		"dev:app": "turbo dev --filter",
		"build": "turbo build",
		"build:app": "turbo build --filter",
		"lint": "turbo --log-order=stream lint",
		"lint:app": "turbo --log-order=stream lint --filter",
		"lint:fix": "turbo --log-order=stream lint:fix",
		"lint:app:fix": "turbo --log-order=stream lint:fix --filter",
		"format": "turbo --log-order=stream format",
		"format:app": "turbo --log-order=stream format --filter",
		"format:check": "turbo --log-order=stream format:check",
		"format:app:check": "turbo --log-order=stream format:check --filter",
		"check": "turbo --log-order=stream check",
		"check:app": "turbo --log-order=stream check --filter",
		"check:fix": "turbo --log-order=stream check:fix",
		"check:app:fix": "turbo --log-order=stream check:fix --filter",
		"type-check": "turbo --log-order=stream type-check",
		"type-check:app": "turbo --log-order=stream type-check --filter",
		"db:push": "pnpm run --filter ./apps/api db:push",
		"db:migrate": "pnpm run --filter ./apps/api db:migrate",
		"db:generate": "pnpm run --filter ./apps/api db:generate",
		"db:studio": "pnpm run --filter ./apps/api db:studio",
		"db:seed": "pnpm run --filter ./apps/api db:seed",
		"ui:add": "pnpm --filter ./apps/web ui:add"
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"packageManager": "pnpm@10.15.1",
	"devDependencies": {
		"@biomejs/biome": "2.2.2",
		"@commitlint/config-conventional": "^19.8.1",
		"@repo/schemas": "workspace:*",
		"@repo/typescript-config": "workspace:*",
		"commitlint": "^19.8.1",
		"lefthook": "^1.12.3",
		"turbo": "^2.5.6",
		"typescript": "^5.9.2"
	},
	"engines": {
		"node": ">=22"
	}
}
